@model AccesPoint.Models.User
@{
    ViewData["Title"] = "Edit User";
}

<form asp-controller="User" asp-action="UpdateMember" method="post" enctype="multipart/form-data">
    <div class="card">
        <div class="card-header">
            Editing user @Model.Id
        </div>
        <div class="card-content">
            <div class="card-content-left">
                <input type="hidden" name="Id" value="@Model.Id"/>
            
                <div>
                    <label>User Name:</label>
                    <input type="text" class="input" name="userName" value="@Model.userName" placeholder="Enter user name" required>
                </div>
                
                <div>
                    <label>User Login:</label>
                    <input type="text" class="input" name="userLogin" value="@Model.userLogin" placeholder="Enter login" required>
                </div>
                
                <div>
                    <label>User Password:</label>
                    <input type="text" class="input" name="userPassword" placeholder="Enter password" required>
                </div>
                
                <div>
                    <label>Kind:</label>
                    <input type="number" class="input" name="kind" value="@Model.kind" placeholder="Enter kind">
                </div>
                
                <div>
                    <label>User Status:</label>
                    <select name="userDisabled" class="input">
                        <option value="false" selected="@(!Model.userDisabled)">Enabled</option>
                        <option value="true" selected="@Model.userDisabled">Disabled</option>
                    </select>
                </div>
            </div>
            <div class="card-content-right">
                <img src="@Url.Action("Avatar", "User", new { id = Model.Id, t = DateTime.Now.Ticks })" 
                    alt="User Avatar" />
                <div>
                    <label>Upload new avatar:</label>
                    <input type="file" class="input" name="avatarFile" accept="image/*">
                </div>
            </div>
        </div>
        <div class="card-actions">
            <button class="button success">Save</button>
        </div>
    </div>
</form>