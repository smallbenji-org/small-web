@model AccesPoint.Models.User
@{
    ViewData["Title"] = "Edit User";
}

<h1>Editing user @Model.Id</h1>

<form asp-controller="User" asp-action="UpdateMember" method="post" enctype="multipart/form-data">
    
    <input type="hidden" name="Id" value="@Model.Id"/>
    
    <div>
        <label>User Name:</label>
        <input type="text" name="userName" value="@Model.userName" placeholder="Enter user name" required>
    </div>
    
    <div>
        <label>User Login:</label>
        <input type="text" name="userLogin" value="@Model.userLogin" placeholder="Enter login" required>
    </div>
    
    <div>
        <label>User Password:</label>
        <input type="text" name="userPassword" value="@Model.userPassword" placeholder="Enter password" required>
    </div>
    
    <div>
        <label>Kind:</label>
        <input type="number" name="kind" value="@Model.kind" placeholder="Enter kind">
    </div>
    
    <div>
        <label>User Status:</label>
        <select name="userDisabled">
            <option value="false" selected="@(!Model.userDisabled)">Enabled</option>
            <option value="true" selected="@Model.userDisabled">Disabled</option>
        </select>
    </div>

    <div>
        <label>Current Avatar:</label><br/>
        <img src="@Url.Action("Avatar", "User", new { id = Model.Id, t = DateTime.Now.Ticks })" 
             width="100" 
             alt="User Avatar" 
             style="border: 1px solid #ddd; padding: 5px;" />
    </div>

    <div>
        <label>Upload new avatar:</label>
        <input type="file" name="avatarFile" accept="image/*">
    </div>

    <button type="submit">Save changes</button>
</form>
