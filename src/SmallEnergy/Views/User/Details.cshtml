@model AccesPoint.Models.User
@{
    ViewData["Title"] = "User Details";
}

<h1>User @Model.Id Details</h1>

<div>
    <h3>Avatar:</h3>
    <img src="@Url.Action("Avatar", "User", new { id = Model.Id, t = DateTime.Now.Ticks })" 
         alt="User Avatar" 
         width="150" 
         style="border: 1px solid #ddd; border-radius: 4px; padding: 5px;" />
</div>

<div>
    <h3>User Information:</h3>
    <p><strong>User Name:</strong> @Model.userName</p>
    <p><strong>User Login:</strong> @Model.userLogin</p>
    <p><strong>Password:</strong> @Model.userPassword</p>
    <p><strong>Kind:</strong> @Model.kind</p>
    <p><strong>Status:</strong> @(Model.userDisabled ? "Disabled" : "Enabled")</p>
</div>

<div>
    <a class="return-home-page" asp-controller="User" asp-action="Index">Return to home page</a>
    <a asp-controller="User" asp-action="EditUser" asp-route-id="@Model.Id">Edit User</a>
</div>
