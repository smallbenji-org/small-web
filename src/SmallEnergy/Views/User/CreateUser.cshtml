@model AccesPoint.Models.User
@{
    ViewData["Title"] = "All Users";
}

<form asp-controller="User" asp-action="CreateMember" method="POST">
    <div class="card">
        <div class="card-header">
            Create user
        </div>
        <div class="card-content">
            <div class="card-content-form">
                <div>
                    <label for="userName">Username</label>
                    <input type="text" name="userName" value="@Model.userName" class="input" />
                </div>
                <div>
                    <label for="userLogin">User Login</label>
                    <input type="text" name="userLogin" value="@Model.userLogin" class="input" />
                </div>
                <div>
                    <label for="userPassword">Password</label>
                    <input type="password" name="userPassword" value="@Model.userPassword" class="input" />
                </div>
                <div>
                    <label>Disabled?</label>
                    <select class="input">
                        <option value="@Model.userDisabled" selected>false</option>
                        <option value="@Model.userDisabled">true</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-actions">
            <button type="submit" class="button success">Create</button>
        </div>
    </div>
</form>